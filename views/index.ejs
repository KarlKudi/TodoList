<%- include("partials/header.ejs") %>



<h1>This is a TodoList. Go forth! And be organised!</h1>
<div>
    <!-- For each element in todoList Array create a list item with a checkbox -->
    <% todoList.forEach(element => { %>
        <div id="<%= element %>">
            <input type="checkbox">
            <label class="task">  <%= element %></label>
        </div>
    <% }); %>
</div>

<div>
    <form action="/create" method="POST">
        <label for="task">Create a task</label><br>
        <input type="text" id="taskInput" name="task">
        <input type="submit" value="Create">
    </form>
</div>

