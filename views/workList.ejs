<%- include("partials/header.ejs") %>

<h1>This is a TodoList. Go to work! And be organised!</h1>
<div>
    <!-- For each element in todoList Array create a list item with a checkbox -->
    <% workList.forEach(element => { %>
        <div>
            <input type="checkbox" id="<%= element %>">
            <label class="task">  <%= element %></label>
        </div>
    <% }); %>
</div>

<form action="/work/create" method="POST">
    <label for="task">Create a task</label><br>
    <input type="text" id="taskInput" name="workTask">
    <input type="submit" value="Create">
</form>

